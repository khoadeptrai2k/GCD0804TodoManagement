@model GCD0804TodoManagement.ViewModels.TeamUsersViewModel
@{
  ViewBag.Title = "AddMember";
}

<h2>Add Member to @Model.Team.Name team</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("AddMember", "Teams", FormMethod.Post))
{

  <div class="form-group">
    Username
    @Html.HiddenFor(m => m.Team.Id)
    @Html.DropDownListFor(m => m.UserId,
     new SelectList(Model.Users, "Id", "Username"),
     new { @class = "form-control" }
     )
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Add to Team</button>
  </div>
}

