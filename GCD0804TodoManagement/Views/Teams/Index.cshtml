@model IEnumerable<GCD0804TodoManagement.Models.Team>
@{
  ViewBag.Title = "Index";
}

<h2>Team Index</h2>

@foreach (var team in Model)
{
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Team Name: @team.Name</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        @Html.ActionLink(
          "See Team Members",
          "Details",
          "Teams",
          new { id = team.Id },
          new { @class = "btn btn-info" }
        )
        <a href="#" class="btn btn-success">Add User To Team</a>
        <a href="#" class="btn btn-danger">Remove User From Team</a>
      </div>
    </div>
  </div>
}

