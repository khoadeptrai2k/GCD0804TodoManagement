@model IEnumerable<GCD0804TodoManagement.Models.ApplicationUser>
@{
  ViewBag.Title = "Details";
}

<h2>Team Members</h2>

<div class="form-group">
  @Html.ActionLink(
    "Back to Team List",
    "Index",
    "Teams",
    null,
    new { @class = "btn btn-primary" }
  )
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var user in Model)
    {
      <tr>
        <td>@user.Email</td>
        <td>@user.UserName</td>
        <td>
          @Html.ActionLink(
            "Remove User From Team",
            "RemoveUser",
            new { id = ViewBag.TeamId, userId = user.Id },
            new { @class = "btn btn-danger" }
          )
        </td>
      </tr>
    }
  </tbody>
</table>

