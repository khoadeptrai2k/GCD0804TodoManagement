@model GCD0804TodoManagement.ViewModels.TodoCategoriesViewModel
@{
	ViewBag.Title = "Create";
}

<h2>Create a new Todo</h2>

@Html.ValidationSummary(false, "", new { @class = "bg-danger" })

@using (Html.BeginForm("Create", "Todoes", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Todo.Description)
		@Html.TextBoxFor(m => m.Todo.Description, new { @class = "form-control", @placeholder = "Enter Todo Description ..." })
		@Html.ValidationMessageFor(m => m.Todo.Description, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Todo.CategoryId)
		@Html.DropDownListFor(m => m.Todo.CategoryId,
		 new SelectList(Model.Categories, "Id", "Name"),
		 new { @class = "form-control" }
		 )
		@Html.ValidationMessageFor(m => m.Todo.CategoryId, "", new { @class = "text-danger" })

	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Todo.DueDate)
		@Html.TextBoxFor(m => m.Todo.DueDate, new { @class = "form-control", @type = "date" })
		@Html.ValidationMessageFor(m => m.Todo.DueDate, "", new { @class = "text-danger" })

	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Create</button>
	</div>
}
